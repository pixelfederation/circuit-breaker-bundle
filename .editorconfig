root=true
[*]
charset=utf-8
indent_style=space
indent_size=4
tab_width=4
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true

[*.{yaml,yml}]
indent_size=2
tab_width=2

[*.{js,ts,jsx,tsx}]
indent_size=2
tab_width=2

[*.hcl]
indent_size=2
tab_width=2

[Makefile]
indent_style=tab

[Jenkinsfile]
indent_size=2
tab_width=2

[*.sh]
end_of_line=lf

[*.md]
trim_trailing_whitespace=false

[*.{xml,xsd}]
max_line_length=off
indent_size=2
tab_width=2

[*.json]
indent_size=2
tab_width=2

[*.neon]
indent_size=2
tab_width=2
