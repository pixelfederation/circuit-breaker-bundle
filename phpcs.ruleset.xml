<?xml version="1.0"?>
<ruleset name="PixelFederation">

  <description>PixelFederation rule set.</description>

  <config name="testVersion" value="8.2"/><!-- insert your php version -->
  <rule ref="PSR12"/>
  <rule ref="vendor/pixelfederation/coding-standards/phpcs.ruleset.82.xml">
    <exclude name="Squiz.PHP.DisallowComparisonAssignment.AssignedComparison"/>
    <exclude name="Squiz.Commenting.BlockComment.WrongStart"/>
  </rule>
  <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
    <properties>
      <property name="rootNamespaces" type="array">
        <element key="src" value="PixelFederation\CircuitBreakerBundle"/>
      </property>
    </properties>
  </rule>

</ruleset>
